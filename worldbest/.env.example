# Environment Configuration for WorldBest Platform
# Copy this file to .env and update the values

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://worldbest:worldbest123@localhost:5432/worldbest?schema=public

# MongoDB Connection String
MONGODB_URI=mongodb://worldbest:worldbest123@localhost:27017/worldbest?authSource=admin

# Redis Connection
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=worldbest123

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=worldbest-auth

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_MAX_AGE=86400000

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_MAX_AGE_DAYS=90

# Account Security
ACCOUNT_LOCKOUT_MAX_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# ===========================================
# EXTERNAL API KEYS
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-openai-org-id

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=worldbest
PINECONE_ENVIRONMENT=us-west1-gcp

# ===========================================
# PAYMENT & BILLING
# ===========================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Email Settings
EMAIL_FROM=noreply@worldbest.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# FILE STORAGE (MinIO/S3)
# ===========================================
# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=worldbest
MINIO_ROOT_PASSWORD=worldbest123
MINIO_ACCESS_KEY=worldbest
MINIO_SECRET_KEY=worldbest123
MINIO_BUCKET=worldbest-files

# AWS S3 (Alternative to MinIO)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=worldbest-production

# ===========================================
# MESSAGE QUEUE (RabbitMQ)
# ===========================================
RABBITMQ_URL=amqp://worldbest:worldbest123@localhost:5672/worldbest
RABBITMQ_USER=worldbest
RABBITMQ_PASSWORD=worldbest123
RABBITMQ_VHOST=worldbest

# ===========================================
# SERVICE PORTS
# ===========================================
# Frontend
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws
FRONTEND_URL=http://localhost:3000

# Services
AUTH_SERVICE_PORT=3001
PROJECT_SERVICE_PORT=3002
AI_ORCHESTRATOR_PORT=3003
EXPORT_SERVICE_PORT=3004
BILLING_SERVICE_PORT=3005

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost,https://localhost

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_SOCIAL_AUTH=false
FEATURE_PASSWORD_RESET=true

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Development Database (SQLite for local testing)
DEV_DATABASE_URL=file:./dev.db

# Debug Settings
DEBUG=worldbest:*
VERBOSE_LOGGING=false

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Production URLs (uncomment for production)
# FRONTEND_URL=https://app.worldbest.ai
# NEXT_PUBLIC_API_URL=https://api.worldbest.ai
# NEXT_PUBLIC_WS_URL=wss://api.worldbest.ai/ws

# SSL/TLS
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# CDN Configuration
# CDN_URL=https://cdn.worldbest.ai

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# These are used by docker-compose
POSTGRES_PASSWORD=worldbest123
MONGO_PASSWORD=worldbest123
RABBITMQ_PASSWORD=worldbest123

# ===========================================
# KUBERNETES CONFIGURATION
# ===========================================
# Namespace
K8S_NAMESPACE=worldbest

# Image Registry
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest