# Environment Configuration for WorldBest Platform
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://worldbest:worldbest123@localhost:5432/worldbest?schema=public
MONGODB_URI=mongodb://worldbest:worldbest123@localhost:27017/worldbest?authSource=admin
REDIS_URL=redis://:worldbest123@localhost:6379

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=worldbest

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Storage (MinIO/S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=worldbest
MINIO_SECRET_KEY=worldbest123
MINIO_USE_SSL=false
STORAGE_BUCKET=worldbest-storage

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@worldbest.ai
EMAIL_REPLY_TO=support@worldbest.ai

# Message Queue
RABBITMQ_URL=amqp://worldbest:worldbest123@localhost:5672/worldbest

# API Configuration
API_URL=http://localhost
API_PORT=3000
WS_URL=ws://localhost/ws

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
ENABLE_AI_PERSONAS=true
ENABLE_COLLABORATION=true
ENABLE_VOICE_INPUT=false
ENABLE_MARKETPLACE=false
ENABLE_BETA_FEATURES=false

# Rate Limiting
RATE_LIMIT_GENERAL=10
RATE_LIMIT_API=30
RATE_LIMIT_AUTH=5
RATE_LIMIT_AI=5

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your-session-secret-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Development
DEBUG=worldbest:*
LOG_LEVEL=debug

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-key

# CDN
CDN_URL=https://cdn.worldbest.ai
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token